<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_page_turner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.matthew.book.Activities.FrontPage"
    android:background="@drawable/greenbackground"
    android:duplicateParentState="true">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/changefragment"
        android:background="@android:drawable/ic_media_ff"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text='All living things have a life cycle. This is the story of my life cycle, which started with me as a tiny seed. Press the stages of my life cycle to learn about them"'
        android:id="@+id/textonpage"
        android:scrollHorizontally="true"
        android:textSize="25sp"
        android:textColor="@android:color/background_dark"
        android:shadowColor="@android:color/background_light"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="24"
        android:fontFamily="sans-serif"
        android:typeface="serif"
        android:textAlignment="center"
        android:elevation="1dp"
        android:textStyle="normal|bold"
        android:layout_toStartOf="@+id/changefragment" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragmentcase"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/textonpage"
        android:layout_alignParentStart="true">

    </FrameLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/repeatspeaks"
        android:background="@android:drawable/ic_menu_rotate"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/changefragment" />


</RelativeLayout>

