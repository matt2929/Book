<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.matthew.book.fragments.PageSix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/page3relativeview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/page6sun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/page5sun1"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/Page6Cloud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/page4rain0"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/Page6mineral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/minerals1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

        <view
            android:layout_height="200dp"
            class="com.example.matthew.book.customview.SunAndRainAndMineral"
            android:id="@+id/rainsunmineral2"
            android:layout_width="75dp"
            android:background="@android:color/transparent"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/Page6Seed2"
            android:layout_marginBottom="120dp" />

        <Button
            android:id="@+id/Page6Seed2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/page6tree1"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="120dp" />

    </RelativeLayout>

</FrameLayout>
